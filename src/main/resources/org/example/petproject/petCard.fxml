<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.petproject.controller.petCardController"
            prefWidth="260" prefHeight="420"
            style="-fx-background-color:white; -fx-background-radius:15; -fx-border-color:#B0E0E6; -fx-border-radius:15; -fx-border-width:1.8; -fx-padding:10;">

    <!-- Center: ảnh pet + service type + các ô khác -->
  <center>
    <VBox spacing="8" alignment="TOP_CENTER">
      <!-- Ảnh pet -->
      <ImageView fx:id="imgPet"
                 fitWidth="90" fitHeight="90" preserveRatio="true"/>

      <!-- Tên pet -->
      <Label fx:id="lblPetName"
             style="-fx-font-size:16px; -fx-text-fill:#007AFF;"/>

      <!-- Loại dịch vụ -->
      <Label text="Loại dịch vụ:"/>
      <Label fx:id="lblServiceType"
             style="-fx-font-size:14px; -fx-text-fill:#FF7B00;"/>

      <!-- Nhân viên phụ trách -->
      <Label text="Nhân viên phụ trách" style="-fx-font-size:12;"/>
      <Label fx:id="lblEmpName"/>
      <Label fx:id="lblEmpPhone"/>

      <!-- Thông tin dịch vụ chi tiết -->
      <TextArea fx:id="txtServiceInfo" prefRowCount="4"
                wrapText="true" editable="false"/>
      <HBox spacing="4" alignment="CENTER_LEFT">
        <Label text="Giá:"/>
        <Label fx:id="lblPrice" style="-fx-font-weight:bold;"/>
      </HBox>
    </VBox>
  </center>

</BorderPane>
