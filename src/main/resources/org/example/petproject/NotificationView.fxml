<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.petproject.controller.NotificationController"
            style="-fx-font-family: 'Segoe UI'; -fx-background-color: #F5F5F5;">

    <!-- HEADER -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #00ACC1; -fx-padding: 10;">
            <Label text="Thông báo  &amp; Nhắc nhở"
                   style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblUsername"
                   style="-fx-text-fill: white; -fx-font-size: 14;"/>
            <ImageView fx:id="avatarImageView"
                       fitHeight="32" fitWidth="32"
                       style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 4,0,0,0);"/>
        </HBox>
    </top>

    <!-- CENTER: danh sách notification -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;"
              BorderPane.alignment="CENTER">
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="notificationContainer"
                          spacing="10"
                          style="-fx-border-color: #BDBDBD;
                       -fx-border-radius: 5;
                       -fx-background-color: white;
                       -fx-background-radius: 5;
                       -fx-padding: 10;"/>
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
