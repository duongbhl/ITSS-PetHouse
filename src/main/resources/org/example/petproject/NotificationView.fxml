<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-font-family: 'Segoe UI'; -fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.petproject.controller.NotificationController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #00C4CC; -fx-padding: 10;">
         <Button onAction="#arrowpressedButton" prefHeight="23.0" prefWidth="23.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 30px; -fx-font-weight: bold; -fx-padding: 0 10 0 5;">
            <font>
               <Font name="System Bold" size="40.0" />
            </font>
            <graphic>
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../assets/logo.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <Label text="Thông báo  &amp; Nhắc nhở">
            <font>
               <Font size="24.0" />
            </font>
         </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblUsername" style="-fx-text-fill: white; -fx-font-size: 14;" />
            <ImageView fx:id="avatarImageView" fitHeight="32" fitWidth="32" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 4,0,0,0);">
            <image>
               <Image url="@../../../assets/icons/user.png" />
            </image></ImageView>
        </HBox>
    </top>

    <!-- CENTER: danh sách notification -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;" BorderPane.alignment="CENTER">
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <VBox fx:id="notificationContainer" spacing="10" style="-fx-border-color: #BDBDBD;                        -fx-border-radius: 5;                        -fx-background-color: white;                        -fx-background-radius: 5;                        -fx-padding: 10;" />
                </content>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>
