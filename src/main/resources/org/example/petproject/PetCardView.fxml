<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.petproject.controller.PetCardController"
            prefWidth="260" prefHeight="420"
            style="-fx-background-color: white;
                   -fx-background-radius:15;
                   -fx-border-color: #B0E0E6;
                   -fx-border-radius:15;
                   -fx-border-width:1.8;
                   -fx-padding:10;">

    <center>
        <VBox spacing="8" alignment="TOP_CENTER">

            <!-- Ảnh pet -->
            <ImageView fx:id="imgPet"
                       fitWidth="90" fitHeight="90"
                       preserveRatio="true" />

            <!-- Tên pet -->
            <Label fx:id="lblPetName"
                   style="-fx-font-size:16px; -fx-text-fill:#007AFF;"/>

            <!-- Nhân viên phụ trách -->
            <Label text="Nhân viên phụ trách:" style="-fx-font-size:12px;"/>
            <Label fx:id="lblEmpName" style="-fx-font-size:14px;"/>
            <Label fx:id="lblEmpPhone" style="-fx-font-size:12px;"/>

            <!-- Thông tin chi tiết -->
            <Label text="Thông tin:" style="-fx-font-size:12px; -fx-text-fill:#444;"/>
            <TextArea fx:id="txtServiceInfo"
                      prefRowCount="12"
                      wrapText="true"
                      editable="false"
                      style="-fx-background-color: transparent;
                             -fx-border-width: 0;"/>

        </VBox>
    </center>
</BorderPane>