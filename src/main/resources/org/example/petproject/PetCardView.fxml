<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="420" prefWidth="260" style="-fx-background-color: white;                    -fx-background-radius:15;                    -fx-border-color: #B0E0E6;                    -fx-border-radius:15;                    -fx-border-width:1.8;                    -fx-padding:10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.petproject.controller.PetCardController">

    <center>
        <VBox alignment="TOP_CENTER" spacing="8">

            <!-- Ảnh pet -->
            <ImageView fx:id="imgPet" fitHeight="90" fitWidth="90" preserveRatio="true" />

            <!-- Tên pet -->
            <Label fx:id="lblPetName" style="-fx-font-size: 16px; -fx-text-fill: black;" />

            <!-- Nhân viên phụ trách -->
            <Label style="-fx-font-size: 12px; -fx-text-fill: black;" text="Nhân viên phụ trách:" />
            <Label fx:id="lblEmpName" style="-fx-font-size: 14px; -fx-text-fill: black;" />
            <Label fx:id="lblEmpPhone" style="-fx-font-size: 12px; -fx-text-fill: black;" />

            <!-- Thông tin chi tiết -->
            <Label style="-fx-font-size:12px; -fx-text-fill:#444;" text="Thông tin:" />
            <TextArea fx:id="txtServiceInfo" editable="false" prefRowCount="12" style="-fx-border-width: 0;" text="fdfdfdfdf" wrapText="true" />

        </VBox>
    </center>
</BorderPane>
