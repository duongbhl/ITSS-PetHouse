<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.CheckBoxTableCell?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.petproject.controller.Dashboard.StaffAppointmentListViewController">
    <children>
        <!-- Top Bar with "PET HOUSE" text (if it's separate from the logo bar) -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #F0F0F0; -fx-padding: 5 10;"
              AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" prefHeight="30.0">
            <children>
                <Label text="PET HOUSE" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <!-- Header Bar with Logo, User Name, Avatar -->
        <HBox alignment="CENTER_LEFT" spacing="10.0"
              style="-fx-background-color: #CCCCCC; -fx-padding: 10px;"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0" prefHeight="70.0">
            <children>
                <ImageView fx:id="logoImageView" fitHeight="50.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="userNameLabel" style="-fx-font-size: 16px; -fx-padding: 0 10 0 0;" text="Tên User" />
                <ImageView fx:id="userAvatarImageView" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </HBox>

        <!-- Main Content Area -->
        <VBox alignment="TOP_CENTER" spacing="20.0"
              AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="120.0"> <!-- Adjusted top anchor -->
            <children>
                <Label text="Lịch khám"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FFA500;" />

                <TableView fx:id="appointmentTableView" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="selectColumn" prefWidth="50.0" style="-fx-alignment: CENTER;">
                            <cellValueFactory>
                                <PropertyValueFactory property="selected" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="timeColumn" prefWidth="120.0" text="Thời gian" style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="petNameColumn" prefWidth="100.0" text="Tên" style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="speciesColumn" prefWidth="100.0" text="Loài" style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="ownerNameColumn" prefWidth="150.0" text="Chủ nuôi" style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="phoneNumberColumn" prefWidth="120.0" text="Điện thoại" style="-fx-alignment: CENTER-LEFT;"/>
                        <TableColumn fx:id="appointmentTypeColumn" prefWidth="150.0" text="Loại hẹn" style="-fx-alignment: CENTER-LEFT;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER" spacing="50.0">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                    <children>
                        <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#handleConfirmButtonAction"
                                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 30; -fx-background-radius: 5;"
                                text="Xác nhận" />
                        <Button fx:id="rejectButton" mnemonicParsing="false" onAction="#handleRejectButtonAction"
                                style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 30; -fx-background-radius: 5;"
                                text="Từ chối" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>